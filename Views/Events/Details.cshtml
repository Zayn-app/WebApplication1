@using WebApplication1.Models.Entity
@model Event

@{
    ViewData["Title"] = "Yeni Etkinlik Ekle";
}


<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Details for @Model.EventName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group text-center">
                    <img class="border-info rounded-circle" style="max-width:150px" id="ProfilePicturePreview" /> </div>           
                <div class="form-group">
                    <label asp-for="ImagePath" class="control-label"></label>
                    <input asp-for="ImagePath" class="form-control" readonly />
                    <span asp-validation-for="ImagePath" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EventName" class="control-label"></label>
                    <input asp-for="EventName" class="form-control" readonly />
                    <span asp-validation-for="EventName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control" readonly></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Location" class="control-label"></label>
                    <input asp-for="Location" class="form-control" readonly />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Date" class="control-label"></label>
                    <input asp-for="Date" class="form-control" type="datetime-local" readonly />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TicketPrice" class="control-label"></label>
                    <input asp-for="TicketPrice" class="form-control" readonly />
                    <span asp-validation-for="TicketPrice" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TotalTickets" class="control-label"></label>
                    <input asp-for="TotalTickets" class="form-control" readonly />
                    <span asp-validation-for="TotalTickets" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AvaliableTickets" class="control-label"></label>
                    <input asp-for="AvaliableTickets" class="form-control" readonly />
                    <span asp-validation-for="AvaliableTickets" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <a class="btn btn-outline-success float-right" asp-action="Edit" asp-route-id="@Model.EventId">Edit</a>
                    }
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>

        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $(#"ProfilePicturePreview").val();
        }) 
    </script>
}





