@model IEnumerable<WebApplication1.Models.Entity.Event>

@{
    ViewData["Title"] = "List of Events";
}



<div class="row ">
    <div class="col-md-8 offset-2">
        <table class="table">
            <thead>
        <tr class="text-center">
            <th>@Html.DisplayNameFor(model => model.ImagePath)</th>
            <th>@Html.DisplayNameFor(model=>model.EventName)</th>
            <th>@Html.DisplayNameFor(model=>model.Description)</th>
            <th>@Html.DisplayNameFor(model=>model.Location)</th>
            <th>@Html.DisplayNameFor(model=>model.Date)</th>
            <th>@Html.DisplayNameFor(model=>model.TicketPrice)</th>
            <th>@Html.DisplayNameFor(model=>model.TotalTickets)</th>
            <th>@Html.DisplayNameFor(model=>model.AvaliableTickets)</th>
            <th>@Html.DisplayNameFor(model=>model.DateCreated)</th>
            <th>Actions</th> 
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="align-middle">
                            <img class="rounded-circle" src="@item.ImagePath" alt="@item.EventName" style="max-width:100%;" />
                        </td>
                        <td class="align-middle">
                            @Html.Display(nameof(item.EventName))
                        </td>

                        <td class="align-middle">
                            @Html.Display(nameof(item.Description))
                        </td>
                        <td class="align-middle">
                            @Html.Display(nameof(item.Location))

                        </td>
                        <td class="align-middle">
                            @Html.Display(nameof(item.Date),"dd-MM-yyyy")
                        </td>
                         <td class="align-middle">
                            @Html.Display(nameof(item.TicketPrice))
                        </td>
                        <td class="align-middle">
                            @Html.Display(nameof(item.TotalTickets))
                        </td>
                        <td class="align-middle">
                            @Html.Display(nameof(item.AvaliableTickets))
                        </td>
                        <td class="align-middle">
                         @Html.Display(nameof(item.DateCreated))</td> 
 
                        
                <td class=" align-middle">
                    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.EventId"><i class="bi bi-pencil-square"></i>Düzenle</a>
                    <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.EventId"><i class="bi bi-eye"></i>Detaylar</a>
                    <a class="btn btn-danger text-white"asp-action="Delete" asp-route-id="@item.EventId"><i class="bi bi-trash"></i>Sil</a>
                </td>
            </tr>
        }
    </tbody>
    </table>

  </div>
</div>
<div class="text-white">
    <a asp-controller ="Events" asp-action="Create" class="btn btn-success"> <i class="bi bi-plus-circle"></i> Add New</a>
</div>

<a asp-action="Create" class="btn btn-primary">Create New Event</a>